generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  role     String @default("USER") // Menggantikan Enum untuk kompatibilitas SQLite

  unitKerjaId Int?
  unitKerja   UnitKerja? @relation(fields: [unitKerjaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model UnitKerja {
  id        Int     @id @default(autoincrement())
  nama      String  @unique
  deskripsi String?

  users   User[]
  laporan LaporanKinerja[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([nama])
}

model LaporanKinerja {
  id         Int      @id @default(autoincrement())
  tanggal    DateTime @default(now())
  target     Float
  realisasi  Float
  keterangan String?

  unitKerjaId Int
  unitKerja   UnitKerja @relation(fields: [unitKerjaId], references: [id], onDelete: Cascade)

  kategori LaporanKinerjaKategoriKinerja[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tanggal, unitKerjaId])
  @@index([tanggal])
  @@index([unitKerjaId])
}

model KategoriKinerja {
  id   Int    @id @default(autoincrement())
  nama String @unique

  laporan LaporanKinerjaKategoriKinerja[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LaporanKinerjaKategoriKinerja {
  laporanKinerjaId  Int
  kategoriKinerjaId Int
  nilai             Float?

  laporanKinerja  LaporanKinerja  @relation(fields: [laporanKinerjaId], references: [id], onDelete: Cascade)
  kategoriKinerja KategoriKinerja @relation(fields: [kategoriKinerjaId], references: [id], onDelete: Restrict)

  @@id([laporanKinerjaId, kategoriKinerjaId])
}
